@{
    ViewBag.Title = "Home";
}
@{
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>eBook Library</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <header>
        <div class="logo">eBook Library</div>
        <nav>
            <ul>
                <li> <a href="@Url.Action("Home", "Home")">Home</a></li>
                <li> <a href="@Url.Action("BookList", "Book")">Books</a></li>
                <li> <a href="@Url.Action("SignUp", "Account")">Sign Up</a></li>
                <li> <a href="@Url.Action("Login", "Account")">Log In</a></li>
                <li> <a href="@Url.Action("Rating", "Book")">feedback </a></li>

            </ul>
        </nav>
        <div class="search-cart">
            <input type="text" placeholder="Search...">
            <button>🔍</button>
            <a href="#">🛒</a>
        </div>
    </header>

    <!-- Hero Section with Light Background -->
    <section class="hero">
        <div class="hero-content">
            
            <h1>Welcome to eBook Library</h1>
            <p>Enjoy reading with a wide range of eBooks</p>
            <p>        </p>
            <p>You can see The Feedback From Users</p>
        </div>
    </section>

 

    <footer>
        <p> Open In 2025 </p>
        <div class="social-links">
            <a href="#">Facebook</a> | <a href="#">Twitter</a>
        </div>
    </footer>
</body>
</html>


<style>
    body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        line-height: 1.6;
        background-color: #f4f1ea;
        color: #4a3c31;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 20px;
        background: #5c4033;
        color: #f4f1ea;
    }

        header .logo {
            font-size: 1.5em;
            font-weight: bold;
        }

        header nav ul {
            list-style: none;
            display: flex;
            margin: 0;
            padding: 0;
        }

            header nav ul li {
                margin-right: 15px;
            }

                header nav ul li a {
                    color: #f4f1ea;
                    text-decoration: none;
                    font-weight: bold;
                    transition: color 0.3s;
                }

                    header nav ul li a:hover {
                        color: #d8c3a5;
                    }

        header .search-cart {
            display: flex;
            align-items: center;
        }

            header .search-cart input {
                padding: 5px;
                margin-right: 10px;
                border: 1px solid #d8c3a5;
                border-radius: 5px;
                background: #f9f7f1;
                color: #4a3c31;
            }

            header .search-cart button {
                background: #d8c3a5;
                border: none;
                color: #4a3c31;
                padding: 5px 10px;
                cursor: pointer;
                border-radius: 5px;
            }

                header .search-cart button:hover {
                    background: #b89f86;
                }

    .hero {
        text-align: center;
        background-color: #f4f1ea; /* خلفية فاتحة للـ Hero */
        color: #5c4033; /* تغيير اللون ليناسب الخلفية الفاتحة */
        padding: 100px 20px;
        position: relative;
    }

    .hero-content {
        position: relative;
        z-index: 2;
    }

    .hero h1 {
        font-size: 2.5em;
        margin-bottom: 10px;
    }

    .hero p {
        font-size: 1.2em;
        margin-bottom: 20px;
    }

    .hero-btn {
        padding: 10px 20px;
        background: #b89f86;
        border: none;
        color: #fff;
        cursor: pointer;
        border-radius: 5px;
        transition: background 0.3s;
    }

        .hero-btn:hover {
            background: #a68a6c;
        }

    .books {
        padding: 20px;
    }

        .books h2 {
            text-align: center;
            color: #5c4033;
            margin-bottom: 20px;
        }

    .book-list {
        display: flex;
        justify-content: space-around;
        flex-wrap: wrap;
    }

    .book-item {
        margin: 10px;
        text-align: center;
        border: 1px solid #d8c3a5;
        padding: 15px;
        border-radius: 10px;
        background: #fff;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

        .book-item img {
            width: 150px;
            height: 200px;
            margin-bottom: 10px;
        }

        .book-item p {
            margin: 5px 0;
        }

        .book-item .btn-view {
            padding: 8px 15px;
            background-color: #b89f86;
            border: none;
            color: #fff;
            font-size: 1em;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .book-item .btn-view:hover {
                background-color: #a68a6c;
            }

    footer {
        text-align: center;
        background: #5c4033;
        color: #f4f1ea;
        padding: 10px 0;
        margin-top: 170px;
    }

        footer .social-links a {
            color: #d8c3a5;
            text-decoration: none;
            margin: 0 10px;
            transition: color 0.3s;
        }

            footer .social-links a:hover {
                color: #fff;
            }


    
</style>