@model IEnumerable<Project0.Models.Book>

@{
    ViewBag.Title = "Purchased Books";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Purchased Books</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <header>
        <div class="logo">eBook Library</div>
        <nav>
            <ul>
                <li><a href="@Url.Action("HomeC", "Home")">Home</a></li>
                <li><a href="@Url.Action("ListBook", "Book")">Books</a></li>
            </ul>
        </nav>
    </header>

    <section class="purchased-books">
        <h2>Your Purchased Books</h2>
        <div class="book-list">
            @foreach (var book in Model)
            {
                <div class="book-item">
                    <img src="@Url.Content("~/Content/Images/" + (book.CoverImage ?? "default.jpg"))" alt="@book.Title" />
                    <p><strong>@book.Title</strong></p>
                    <p>Author: @book.Author</p>
                    <p>Price: $@book.Price</p>
                    <button class="btn-view">View Details</button>
                </div>
            }
        </div>
    </section>

    <footer>
        <p>&copy; 2025 All rights reserved</p>
        <div class="social-links">
            <a href="#">Facebook</a> | <a href="#">Twitter</a>
        </div>
    </footer>

    <style>
        .purchased-books {
            padding: 20px;
        }

            .purchased-books h2 {
                text-align: center;
                color: #5c4033;
                margin-bottom: 20px;
            }

        .book-list {
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
        }

        .book-item {
            margin: 10px;
            text-align: center;
            border: 1px solid #d8c3a5;
            padding: 15px;
            border-radius: 10px;
            background: #fff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

            .book-item img {
                width: 150px;
                height: 200px;
                margin-bottom: 10px;
            }

            .book-item p {
                margin: 5px 0;
            }

            .book-item .btn-view {
                padding: 8px 15px;
                background-color: #b89f86;
                border: none;
                color: #fff;
                font-size: 1em;
                cursor: pointer;
                border-radius: 5px;
                transition: background-color 0.3s;
            }

                .book-item .btn-view:hover {
                    background-color: #a68a6c;
                }
    </style>
</body>
</html>